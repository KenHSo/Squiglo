@inherits LayoutComponentBase

<div class="container-lg">
    <div class="row">
        <!-- Left Sidebar -->
        <aside class="col-md-3 col-lg-2 sidebar left-sidebar">
            <NavMenu />
        </aside>

        <!-- Center Content (Post Feed) -->
        <main class="col-md-6 col-lg-8 content">
            <section class="post-feed px-4">
                @Body
            </section>
        </main>

        <!-- Right Sidebar (Shrinks Before Hiding) -->
        <aside class="col-md-3 col-lg-2 sidebar right-sidebar">
            <p>Search</p>
            <p>Trending</p>
            <p>About</p>
        </aside>
    </div>
</div>


<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>


