@inherits LayoutComponentBase

<div class="container-lg">
    <div class="row">
        <!-- Left Sidebar -->
        <aside class="col-md-3 col-lg-2 sidebar left-sidebar">
            <NavMenu />

             <!-- Profile section at the bottom -->
             <div class="profile-container">
                <img src="images/profile.jpg" alt="ProfilePicture" class="profile-pic">
                <p class="profile-name">UsernamePlaceholder</p>
            </div>
        </aside>

        <!-- Center Content -->
        <main class="col-md-6 col-lg-8 content">
            <section class="post-feed px-4">
                @Body
            </section>
        </main>

        <!-- Right Sidebar -->
        <aside class="col-md-3 col-lg-2 sidebar right-sidebar">
            <p>Search</p>
            <p>Trending</p>
            <p>About</p>

            <!-- Copyright at the bottom -->
            <div class="copyright-container">
                <p class="copyright">© 2025 Squiglo™</p>
                <p class="copyright">All rights reserved</p>
            </div>
        </aside>
    </div>
</div>


<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>


